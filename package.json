{
  "name": "tamia-theme",
  "version": "0.1.0",
  "description": "Simple theming for static sites",
  "author": {
    "name": "Artem Sapegin",
    "url": "http://sapegin.me"
  },
  "homepage": "https://github.com/sapegin/tamia-theme",
  "repository": "sapegin/tamia-theme",
  "license": "MIT",
  "engines": {
    "node": ">=8"
  },
  "main": "index.js",
  "files": [
    "babel.js",
    "index.js",
    "merge.js"
  ],
  "scripts": {
