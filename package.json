{
  "name": "tamia-theme",
  "version": "0.1.0",
  "description": "Simple theming for static sites",
  "author": {
    "name": "Artem Sapegin",
    "url": "http://sapegin.me"
  },
  "homepage": "https://github.com/tamiadev/tamia-theme",
  "repository": "tamiadev/tamia-theme",
  "license": "MIT",
  "engines": {
    "node": ">=8"
  },
  "main": "index.js",
  "files": [
    "babel.js",
    "index.js",
    "merge.js"
  ],
  "scripts": {
    "lint": "eslint . --cache --fix",
    "pretest": "npm run lint",
    "precommit": "lint-staged",
    "test:jest": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test": "npm run test:jest",
    "posttest": "npm run format",
    "format": "prettier --write '**/*.{js,md}'"
  },
  "keywords": [
    "theme",
    "theming",
    "static",
    "site",
    "emotion",
    "css-in-js",
    "babel-plugin"
  ],
  "dependencies": {
    "dlv": "^1.1.2"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "eslint": "^5.1.0",
    "eslint-config-tamia": "^6.0.0",
    "husky": "^0.14.3",
    "jest": "^23.4.0",
    "lint-staged": "^7.2.0",
    "prettier": "^1.13.7"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  }
}
